@model Student
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-action="Save">
        <div class="row">
            <div class="col-5">
                <div class="form-group">
                    <label asp-for="StudentId">ID</label>
                    <input type="text" asp-for="StudentId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="StudentName">Name</label>
                    <input type="text" asp-for="StudentName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Age">Age</label>
                    <input type="number" asp-for="Age" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Std">STD</label>
                    <select asp-for="Std" asp-items='@new SelectList(new string[] { "I","II","III","IV"})'>
                        @*<option>I</option>
                        <option>II</option>
                        <option>III</option>
                        <option>IV</option>*@
                    </select>
                </div>
                <input type="submit" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>

